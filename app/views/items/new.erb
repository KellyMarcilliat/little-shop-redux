<form class="" action="/items/new" method="post">

  <label for="merchant-list">Merchant</label>
  <select id="merchant-list" class="" name="">
    <% @merchants.each do |merchant| %>
      <option value="<%= merchant["merchant_id"] %>"> <%= merchant.name %> </option>
    <% end %>
  </select>

  <label for="title">Title</label>
  <input type="text" name="item[name]" id="title" value="title"><br>

  <label for="description">Description</label>
  <input type="text" name="item[description]" id="description" value="description"><br>

  <label for="price">Price</label>
  <input type="text" name="item[unit_price]" id="price" value="price"><br>

  <label for="price">Image URL</label>
  <input type="text" name="item[image]" id="image" value="image-url"><br>

  <a href="/items"><button>Cancel</button></a>
  <input type="submit" name="create-item" value="Create Item">
</form>
